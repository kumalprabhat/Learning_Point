<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/tvres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#06c950"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff"
        android:text="Lagre text"/>
    <TextView
        android:id="@+id/tvres2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ed2926"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:text="Lagre text2"/>
    <TextView
        android:id="@+id/tvres3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#438bbf"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:text="Lagre text3"/>
    <Button
        android:id="@+id/btnRestart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="reset"
        android:textSize="30dp"
        android:layout_marginTop="200dp"
        android:background="#22544e"
        android:textColor="#ffffff"
        android:gravity="center"/>
</LinearLayout>